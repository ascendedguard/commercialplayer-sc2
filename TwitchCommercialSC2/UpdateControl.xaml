<UserControl x:Class="TwitchCommercialSC2.UpdateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox Width="200" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center" Header="Update Progress">
            <StackPanel VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextStyle}" Text="Downloading Update..." />
                <ProgressBar x:Name="progressBar" Height="20" Margin="10,5,10,0" />
            </StackPanel>
        </GroupBox> 
    </Grid>
</UserControl>
