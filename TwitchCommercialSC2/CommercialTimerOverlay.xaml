<Window x:Class="TwitchCommercialSC2.CommercialTimerOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CommercialTimerOverlay" AllowsTransparency="True" Topmost="True" Height="97" Width="142" WindowStyle="None" Background="Black" Opacity=".5" ShowInTaskbar="False" ShowActivated="False" ResizeMode="NoResize" Top="0" Left="0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="txtHeader" Text="Commercials playing:" Foreground="White" FontSize="12" FontFamily="./Fonts/#Droid Sans" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Grid.Row="1" x:Name="txtTimeRemaining" Text="60"  HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="50" Foreground="White" FontFamily="./Fonts/#Droid Sans Bold" />
        <TextBlock Grid.Row="2" Text="seconds remaining." Foreground="White" FontSize="12" FontFamily="./Fonts/#Droid Sans" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
