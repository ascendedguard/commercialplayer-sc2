<UserControl x:Class="TwitchCommercialSC2.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="278" d:DesignWidth="490">
    <Grid>
        <GroupBox Header="Log In To Twitch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="225" Height="135">
            <Grid>
                <TextBlock Style="{StaticResource TextStyle}" Text="Login Code" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" />
                <TextBox VerticalAlignment="Top" Margin="76,36,6,0" x:Name="txtUsername" KeyDown="PasswordKeyDown" />
                <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource LoginButton}" Content="Login" Click="LoginClicked" />
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource TextStyle}" Text="Login on Twitch here:" VerticalAlignment="Top" Width="125" />
                <Button Content="Authenticate" HorizontalAlignment="Right" Margin="0,0,6,75" Style="{StaticResource LoginButton}" VerticalAlignment="Bottom" Width="76" Click="AuthenticateButtonClicked" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
